# =============================================================================
# GrandCafe Cheers Platform — Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values:
#   cp .env.example .env.local
# =============================================================================

# -----------------------------------------------------------------------------
# Supabase (required)
# Get these from: https://supabase.com/dashboard/project/_/settings/api
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# -----------------------------------------------------------------------------
# Claude AI (required)
# Get your key from: https://console.anthropic.com/settings/keys
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-api03-...

# -----------------------------------------------------------------------------
# App Configuration (required)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
TIMEZONE=Europe/Madrid
DEFAULT_LOCALE=en

# -----------------------------------------------------------------------------
# Email — Resend (optional)
# Sign up at: https://resend.com
# -----------------------------------------------------------------------------
RESEND_API_KEY=re_...
EMAIL_FROM=noreply@yourdomain.com

# -----------------------------------------------------------------------------
# Meta Graph API — Instagram/Facebook (optional)
# Set up at: https://developers.facebook.com
# -----------------------------------------------------------------------------
META_ACCESS_TOKEN=
META_PAGE_ID=
META_IG_USER_ID=

# -----------------------------------------------------------------------------
# Push Notifications — Web Push API (optional)
# Generate VAPID keys: npx web-push generate-vapid-keys
# -----------------------------------------------------------------------------
NEXT_PUBLIC_VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# -----------------------------------------------------------------------------
# Google Gemini — Image Generation (optional)
# Get your key from: https://aistudio.google.com/apikey
# -----------------------------------------------------------------------------
GEMINI_API_KEY=

# -----------------------------------------------------------------------------
# Cloudflare Turnstile — Kiosk Security (required for kiosk)
# Get keys from: https://dash.cloudflare.com/
# Mode: "Managed" challenge
# Test keys: Always pass: 1x00000000000000000000AA | Always fail: 2x00000000000000000000AB
# -----------------------------------------------------------------------------
NEXT_PUBLIC_TURNSTILE_SITE_KEY=1x00000000000000000000AA
TURNSTILE_SECRET_KEY=1x0000000000000000000000000000000AA

# -----------------------------------------------------------------------------
# Kiosk Session JWT Secret (required)
# Generate with: openssl rand -base64 32
# IMPORTANT: Never share this secret or commit it to version control
# -----------------------------------------------------------------------------
KIOSK_SESSION_SECRET=
